	int a, b, c, media;
	
	printf("Digite o primeiro número: \n");
	scanf("%d", &a);
	
	printf("Digite o segundo número: \n");
	scanf("%d", &b);
	
	printf("Digite o terceiro número: \n");
	scanf("%d", &c);
	
	media = (a + b + c) / 3;
	
	printf("A média aritmètica é: %d\n", media);
	
	return 0;
}

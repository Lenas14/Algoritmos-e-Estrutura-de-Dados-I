1.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
    int base, altura, area;

    printf("Digite a base do triângulo: \n");
    scanf("%d", &base);

    printf("Agora digite a altura do triângulo: \n");
    scanf("%d", &altura);

    area = base * altura / 2;

    printf("A área do triângulo é: %d\n\n", area);

    return 0;
}

2.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int a, b, soma, subtracao, multiplicacao, divisao;
	
	printf("Digite um número inteiro: \n");
	scanf("%d", &a);
	
	printf("Digite outro número inteiro: \n");
	scanf("%d", &b);
	
	soma = a + b;
	subtracao = a - b;
	multiplicacao = a * b;
	divisao = a / b;
	
	printf("A soma dos dois números é: %d\n\n", soma);
	printf("A subtração dos dois números é: %d\n\n", subtracao);
	printf("A multiplicação dos dois números é: %d\n\n", multiplicacao);
	printf("E a divisão dos dois números é: %d\n\n", divisao);
	
	return 0;
}

3.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	char nome[40];
	double salario, vendas, total;
	
	printf("Digite o nome do vendedor: \n");
	scanf("%s", &nome);
	
	printf("Digite o salário do vendedor: \n");
	scanf("%lf", &salario);
	
	printf("Digite o total de vendas efetuadas: \n");
	scanf("%lf", &vendas);
	
	total = salario + vendas * 20 / 100;
	
	printf("O nome do vendedor é: %s\n\n", nome);
	printf("O salário mensal do vendedor é: %.2lf\n", salario);
	printf("O salário total do vendedor é: %.2lf\n", total);
	
	return 0;
}
4.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	float a, b, c, media;
	char nome[40];
	
	printf("Digite o nome do aluno: \n");
	scanf("%s", &nome);
	
	printf("Digite a nota da primeira prova: \n");
	scanf("%f", &a );
	
	printf("Digite a nota da segunda prova: \n");
	scanf("%f", &b);
	
	printf("Digite a nota da terceira prova: \n");
	scanf("%f", &c);
	
	media = (a * 2 + b * 4 + c * 6) / 12;
	
	printf("O nome do aluno é: %s\n", nome);
	printf("A média ponderada do aluno é: %.1f\n", media);
	
	return 0;
}
5.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int a, b;
	
	printf("Digite o primeiro valor inteiro: \n");
	scanf("%d", &a);
	
	printf("Digite o segundo valor inteiro: \n");
	scanf("%d", &b);
	
	if (a == b)
		printf("Os dois valores inteiros são iguais. \n");
	else
		printf("Os dois valores são diferentes. \n");
	return 0;
}
6.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int a;
	
	printf("Digite um número: \n");
	scanf("%d", &a);

	if (a >= 200 && a <= 300)
		printf("O número digitado está no intervalo entre 200 e 300. \n");
	else
		printf("O número digitado não está no intervalo entre 200 e 300. \n");
	return 0;
}
7.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int folha;
	double preco=0.50, valor;
	
	printf("Digite o número de folhas que serão copiadas: \n");
	scanf("%d", &folha);
		
	if(folha >= 200)
		preco = 0.30;
		
	valor = folha * preco;
	
	printf("O valor a ser pago será: %.2lf\n", valor);
	
	return 0;
}
8.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int idade;
	
	printf("Informe a idade do jogador: \n");
	scanf("%d", &idade);
	
	if(idade <= 13)
		printf("A categoria do jogador é infantil. \n");
	else if(idade > 13 && idade <= 17)
		printf("A categoria do jogador é juvenil. \n");
	else printf("A categoria do jogador é sênior. \n");
	
	return 0;
}
9.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int a, b, maior;
	
	printf("Informe um número inteiro: \n");
	scanf("%d", &a);
	
	printf("Informe outro número inteiro: \n");
	scanf("%d", &b);
	
	if (a == b)
		printf("Os dois números são iguais. \n");
	else if (a > b)
		maior = a;
	else maior = b;
	
	printf("O maior número é: %d", maior);
	return 0;
}

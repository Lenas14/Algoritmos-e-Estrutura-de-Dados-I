14.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int C;
	float F;
	
	printf("Digite uma temperatura em graus celsius: \n");
	scanf("%d", &C);
	
	F = (9 * C + 160)/5;
	
	printf("A temperatura digitada em graus Farenheit é: %.1f\n", F);
	
	return 0;
}
15.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int C;
	float F;
	
	printf("Digite uma temperatura em graus farenheit: \n");
	scanf("%f", &F);
	
	C = ((F-32)*5)/9;
	
	printf("A temperatura digitada em graus Celsius é: %d\n", C);
	
	return 0;
}
16.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
    int a, b, c;
    printf("Digite 3 numeros:\n");
    scanf("%d %d %d", &a, &b, &c);
    if (a > c) {
        int tmp = c;
        c = a;
        a = tmp;
    }
    if (a > b) {
        int tmp = b;
        b = a;
        a = tmp;
    }
    if (b > c) {
        int tmp = c;
        c = b;
        b = tmp;
    }
    printf("%d %d %d", a, b, c);
return 0;
}
17.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
    float a, b, c, d, media;
    
    printf("Digite as 4 notas do aluno: \n");
    scanf("%f %f %f %f", &a, &b, &c, &d);
   
   media = (a + b + c + d) / 4;
   
   if (media >= 5)
   	printf("O aluno foi aprovado, média: %.1f", media);
   else printf("O aluno foi reprovado, média: %.1f", media);
   
return 0;
}
18.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
    float a, b, diferenca;
    
    printf("Digite dois valores numéricos: \n");
    scanf("%f %f", &a, &b);
	
	if (a > b)
		diferenca = a - b;
	else if (a == b)
		printf("Os dois números são iguais. \n");
	else diferenca = b - a;

	printf("A difreneça dos dois números é: %.1f\n", diferenca);
return 0;
}
19.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int a = 0;
	
	while (a <= 10){
		printf ("%d", a);
		printf("\n);
		a++;
	}
return 0;
}
20.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	int a = 100;
	
	while (a >= 1){
		printf ("%d", a);
		printf("\n");
		a--;
	}
return 0;
}

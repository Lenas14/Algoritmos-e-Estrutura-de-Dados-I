12.
#include <stdio.h>
#include <locale.h>

int main() {
	setlocale(LC_ALL, "Portuguese");
	float a, b, c, media;
	char nome[40];
	
	printf("Digite o nome do aluno: \n");
	scanf("%s", &nome);
	
	printf("Digite a nota da primeira prova do semestre: \n");
	scanf("%f", &a);
	
	printf("Digite a nota da segunda prova do semestre: \n");
	scanf("%f", &b);
	
	printf("Digite a nota da terceira prova do semestre: \n");
	scanf("%f", &c);
	
	media = (a + b + c) / 3;
	
	printf("O nome do aluno é: %s\n", nome);
	printf("A média do aluno é: %.1f", media);
	
	return 0;
}
